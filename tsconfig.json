{
  "compilerOptions": {
    "target": "ES2017",
    "paths": {
      "@/*": [
        "./*"
      ]
    },
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "incremental": true,
    "module": "esnext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "**/*.ts",
    "**/*.tsx",
    "types/order-schema.js",
    "app/dashboard/cotizaciones/addcotizacion/ui/Tiptap.jsx",
    "app/dashboard/cotizaciones/addcotizacion/ui/FormOrder.jsx",
    "server/actions/get-cotization.js",
    "server/actions/create-cotizacion.js"
  ],
  "exclude": [
    "node_modules"
  ]
}